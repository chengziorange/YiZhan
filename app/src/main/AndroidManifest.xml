<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.orange233.yizhan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.YiZhanApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_192"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".module.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".module.home.MainActivity" />

        <activity android:name=".module.homepage.news.reader.NewsReaderActivity" />

        <activity android:name=".module.home.login.LoginActivity" />

        <activity android:name=".module.homepage.anime.AnimeSearchActivity" />

        <activity
            android:name=".module.homepage.anime.player.AnimePlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait" />

        <activity android:name=".module.profile.ProfileEditActivity" />
    </application>

</manifest>